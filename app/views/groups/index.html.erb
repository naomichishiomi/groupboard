<%= render "layouts/flash_messages" %>
<% if logged_in_member? %>

  <div class="row">
    <%= form_for(@comment) do |f| %>
      <div class="form-group col-md-offset-1 col-md-8">
        <%= f.text_area :content, class: "form-control", rows: 5 %>
        <%= hidden_field_tag :groupnumber, @group.id %>
      </div>
      <div class="col-md-2">
        <%= f.submit "投稿", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-5 col-md-offset-1 col-md-4">
    <%= render "members/members", members: @members %>
  </div>
  <div class="col-xs-7 col-md-6">
    <%= render 'comments/comments', comments: @comments %>
  </div>
</div>