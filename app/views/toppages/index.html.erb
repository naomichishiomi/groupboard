<%= render "layouts/flash_messages" %>
<div class="row">
<div class="text-left col-xs-6">
  <%= link_to "<<Group Boardについて", static_pages_about_path %>
</div>
<div class="text-right col-xs-6">
  <%= link_to "新規role作成>>", new_role_path %>
</div>
</div>
<div class="center jumbotron" style="background-color:#fff;">
  <div class="text-center">
    <h1>Group Board</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-offset-2 col-xs-8 col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
<%#    <%= render "layouts/error_messages", model: f.object %>
      <div class="form-group">
        <%= f.label :member_name, "メンバー名" %>
        <%= f.text_field :member_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "メンバーパス" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.submit "グループに参加", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>