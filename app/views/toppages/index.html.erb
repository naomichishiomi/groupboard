<div class="text-right">
  <%= link_to "新規グループ作成", new_group_path %>
</div>
<div class="center jumbotron" style="background-color:#fff;">
  <div class="text-center">
    <h1>Group Board</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
      <div class="form-group">
        <%= f.label :group_name, "グループ名" %>
        <%= f.text_field :group_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "グループパス" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <%= f.submit "グループに参加", class: "btn btn-primary btn-block" %>
    <% end %>
  </div>
</div>